{
  "name": "amalgam-game",
  "version": "1.0.0",
  "description": "Amalgam - Abstract Strategy Game",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "dev": "tsc --watch",
    "clean": "rm -rf dist && rm -f *.js core/*.js ui/*.js game/*.js utils/*.js",
    "serve": "python3 -m http.server 8080",
    "test": "node tests/run-tests.js",
    "test:web": "python3 -m http.server 8080 && open http://localhost:8080/tests.html",
    "test:cli": "node tests/consolidated-test-runner.js",
    "protect-tests": "bash scripts/protect-test-files.sh"
  },
  "devDependencies": {
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
